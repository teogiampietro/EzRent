<EditForm Model="@Product" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator/>
    <MudGrid Class="d-flex flex-column">
        <MudItem>
            <MudPaper Class="pa-4">
                <MudTextField Label="Nombre" Required="true" RequiredError="DescripciÃ³n requerido" @bind-Value="Product.Description"/>
                <MudTextField Label="Precio" Required="true" RequiredError="Precio requerido" @bind-Value="Product.Price"/>
                <MudTextField Label="Cantidad" Required="true" RequiredError="Cantidad de cajas" @bind-Value="Product.Quantity"/>
                <MudTextField Label="Cantidad por caja" Required="true" RequiredError="Cantidad de items por caja" @bind-Value="Product.ItemsPerBox"/>
